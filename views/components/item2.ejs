<div class="col-sm-6 col-lg-4 col-xxl-3 py-3">
    <div class="item-wrapper p-3 shadows">
        <a href="" class="pointer-link">
            <img src="/assets/images/shoe.jpg" alt="" class="g-image item-image">
            <h5 class="pt-2">Shoe Name</h5>
            <span>Colours</span>
            <ul class="available-options-wrapper color-wrapper">
                <%- shoe.colors.map(color => `<li style="background-color: ${color.color_hex};"></li>`).join('') %>
            </ul>
            <span>Sizes</span>
            <ul class="available-options-wrapper sizes-wrapper">
                <% shoe.sizes.forEach((size) => { %>
                    <li><%= size %></li>
                <% }); %>
            </ul>
        </a>
    </div>
</div>