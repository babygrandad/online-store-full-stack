<div class="cart-item py-3 mt-2 mb-4 rounded-3">
    <div class="row">
        <div class="col-6 col-md-3 mb-2">
            <img src="https://placehold.co/150" alt="">
        </div>
        <div class="col-6 col-md-3 mb-2">
            <div class="col">Name</div>
            <div class="col">Colour:</div>
            <div class="col">Size:</div>
        </div>
        <div class="col-md-3 mb-2">
            <div class="row">
                <div class="d-block">
                    <form action="">
                        <div class="input-group mb-4" role="group" aria-label="Basic example">
                            <button type="button" id="quantity-Minus" class="btn btn-outline-secondary"
                                onmousedown="stepDown()">
                                <i class="fa-sharp fa-solid fa-minus"></i>
                            </button>
                            <div class="form-floating">
                                <input type="number" class="form-control" id="user-quantity" min="1"
                                    value="1" placeholder="Quantity">
                                <label for="user-quantity">Quantity</label>
                            </div>
                            <button type="button" id="quantity-Plus" class="btn btn-outline-secondary"
                                onmousedown="stepUp()">
                                <i class="fa-sharp fa-solid fa-plus"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="d-block">
                    Price
                </div>
            </div>

        </div>
        <div class="col-md-3 mb-2">
            <div class="btn btn-danger">Remove Item</div>
        </div>
    </div>
</div>