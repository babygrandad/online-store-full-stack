    <div class="container">
        <div class="row">
            <div class="col midcenter text-wrapper py-5">
                <h1>Contact Us</h1>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <!-- contact information side -->
            <div class="col-lg-6 info-side py-5">
                <h2>Contact Information</h2>
                <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Corporis excepturi, quisquam fuga provident beatae error explicabo iste dicta perferendis et.</p>
                <div class="row py-3">
                    <h3>Contact</h3>
                    <ul class="nav flex-column">
                        <li class="nav-item"><a href="#" class="nav-link text-dark"><i class="fa-solid fa-phone"> </i> +27 XX XXX XXX</a></li>
                        <li class="nav-item"><a href="#" class="nav-link text-dark"><i class="fa-solid fa-envelope"> </i> info@example.com</a></li>
                        <li class="nav-item"><a href="#" class="nav-link text-dark"><i class="fa-solid fa-location-dot"> </i> 1234 Example-lane 5678 Example</a></li>
                        <li class="nav-item"><a href="#" class="nav-link text-dark"><i class="fa-solid fa-globe"> </i> www.example.com</a></li>
                    </ul>
                </div>
                <div class="row pt-3">
                    <h3>Socilas</h3>
                    <div class="col">
                        <div id="twitter-social" class="social-icon d-inline pe-3"><a href="#" class="text-dark"><i class="fa-brands fa-twitter fa-2x"></i></div></a>
                        <div id="facebook-social" class="social-icon d-inline pe-3"><a href="#" class="text-dark"><i class="fa-brands fa-square-facebook fa-2x"></i></div></a>
                        <div id="instagram-social" class="social-icon d-inline pe-3"><a href="#" class="text-dark"><i class="fa-brands fa-instagram fa-2x"></i></div></a>
                    </div>
                </div>
            </div>
            <!-- message form side -->
            <div class="col-lg-6 message-side py-5">
                <form action="" method="post">
                    <h3 class="pb-3">Say something</h3>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" name="fullName" placeholder="Full Name" required>
                                <label for="fullName">Full Name</label>
                                <div class="invalid-feedback">
                                    <!--  -->
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" name="email" placeholder="Email" required>
                                <label for="email">Email</label>
                                <div class="invalid-feedback">
                                    <!--  -->
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" name="phone" placeholder="Phone" required>
                                <label for="phone">Phone</label>
                                <div class="invalid-feedback">
                                    <!--  -->
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="mb-3">
                                <textarea class="form-control" name="message" placeholder="What is your question?" rows="3" required></textarea>
                                <div class="invalid-feedback">
                                    <!--  -->
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <button class="btn btn-lg btn-primary">Send Message</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

